@model CsrfDemo.Models.UserProfileViewModel

<h2>User Profile</h2>

<dl class="row">
    <dt class="col-sm-2">Username:</dt>
    <dd class="col-sm-10">@Model.UserName</dd>

    <dt class="col-sm-2">Email:</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <!-- Add other properties as needed -->
</dl>

<p>
    <a asp-action="ShowChangeEmail" class="btn btn-primary">Change email</a>
    <a asp-action="ChangePassword" class="btn btn-primary">Change password</a>
</p>
